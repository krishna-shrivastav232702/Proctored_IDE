# Database
DATABASE_URL="postgresql://user:password@localhost:5432/code_in_the_dark"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Redis (Upstash) - Used for caching, AI tracking, and build queue
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"
UPSTASH_REDIS_HOST="your-upstash-redis-host.upstash.io"
UPSTASH_REDIS_PORT="6379"
UPSTASH_REDIS_PASSWORD="your-upstash-redis-password"
UPSTASH_REDIS_TLS="true"

# S3 / Object Storage
S3_REGION="us-east-1"
S3_ACCESS_KEY="your-s3-access-key"
S3_SECRET_KEY="your-s3-secret-key"
S3_BUCKET="your-bucket-name"
CDN_BASE_URL="https://your-cdn-url.com"

# Cloudflare Pages (for deployment)
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"

# AI / Gemini
GEMINI_API_KEY="your-gemini-api-key"

# Docker
DOCKER_HOST="/var/run/docker.sock"
CONTAINER_IMAGE="node:18-alpine"
CONTAINER_NAME="node:18-alpine"
CONTAINER_MEMORY_LIMIT="512m"
CONTAINER_CPU_LIMIT="0.5"

# Application
PORT=5000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"
MAX_TEAM_SIZE="3"
AI_MAX_HINTS_PER_TEAM="3"
